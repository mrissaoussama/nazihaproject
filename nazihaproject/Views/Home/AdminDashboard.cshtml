@model NazihaProject.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Tableau de bord";
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Tableau de bord administrateur</h1>

    <div class="row">
        <div class="col-lg-4">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@Model.PendingAnalysesCount</h3>
                    <p>Analyses en attente d'approbation</p>
                </div>
                <div class="icon">
                    <i class="fas fa-clock"></i>
                </div>
                <a asp-controller="Prelivage" asp-action="PendingAnalyses" class="small-box-footer">
                    Gérer <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.ApprovedAnalysesCount</h3>
                    <p>Analyses approuvées</p>
                </div>
                <div class="icon">
                    <i class="fas fa-check-circle"></i>
                </div>

            </div>
        </div>

        <div class="col-lg-4">
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@Model.RejectedAnalysesCount</h3>
                    <p>Analyses rejetées</p>
                </div>
                <div class="icon">
                    <i class="fas fa-times-circle"></i>
                </div>

            </div>
        </div>
    </div>

    @if (Model.AnalysesByType.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Analyses en attente par type</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Type d'analyse</th>
                                    <th>Nombre en attente</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.AnalysesByType)
                                {
                                    <tr>
                                        <td>@item.Key</td>
                                        <td>@item.Value</td>
                                        <td>
                                            <a asp-controller="Prelivage" asp-action="AnalysisResults"
                                               asp-route-type="@item.Key"
                                               asp-route-status="@ApprovalStatus.Pending"
                                               class="btn btn-sm btn-primary">
                                                Voir
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>