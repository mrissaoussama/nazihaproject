@model nazihaproject.Models.Note

@{
    ViewData["Title"] = "Ajouter une note";
}

<div class="content-header">
    <div class="container-fluid">
        <h1 class="m-0">@ViewData["Title"]</h1>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Remplir le formulaire</h3>
                    </div>
                    <form asp-action="Create">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Nom</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label">Prénom</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save mr-1"></i> Enregistrer
                                </button>
                                @if (User.IsInRole(nameof(NazihaProject.Models.RoleType.Responsable)))
                                {
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-list mr-1"></i> Retour à la liste
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-home mr-1"></i> Tableau de bord
                                    </a>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}