<script>
    window.initializeApp = function() {
        appLog('Initializing app...');
        
        if ($('#analysisDate, #analysisHour').length > 0) {
            appLog('Initializing date/hour fields');
            const now = new Date();
            
            if ($('#analysisHour').length > 0) {
                $('#analysisHour').val(now.getHours());
                appLog('Set hour to: ' + now.getHours());
            }
            
            if ($('#analysisDate').length > 0) {
                $('#analysisDate').val(now.toISOString().split('T')[0]);
                appLog('Set date to: ' + now.toISOString().split('T')[0]);
            }
        }
        
        if ($.fn.DataTable && $('.dataTable').length > 0) {
            appLog('Initializing DataTables');
            $('.dataTable').DataTable();
        }
        
        window.appInitialized = true;
        appLog('App initialization complete');
    };
    
    $(document).ready(function() {
        appLog('Document ready event fired');
        window.initializeApp();
    });
</script>
